---
import Layout from './Base.astro';
import Container from "../components/Container.astro";
import ArticleSchema from '../components/ArticleSchema.astro';

const { frontmatter } = Astro.props;
---

<Layout seo={frontmatter}>
  <Fragment slot="head-bottom">
  <ArticleSchema {...frontmatter}  />
 </Fragment>
  <Container>
    <article class="post-content__article">
      {frontmatter.image && <img width="720" height="420" class="post-main__img" loading="lazy" src={frontmatter.image} alt={frontmatter.alt} />}
      <h1 class="post-title">{frontmatter.title}</h1>
      <time>{frontmatter.publishDate}</time>

    <p><strong>Current Music:</strong> {music}<br/>
    <strong>Mood:</strong> {mood}</p>
<hr>
      <slot />
    </article>
<p>
<button>
<a href="mailto: mdohr07@gmail.com">Reply via E-Mail</a>
</button>
</p>
  </Container>
</Layout>
