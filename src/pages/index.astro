---
import Layout from "../layouts/Base.astro";
import Container from "../components/Container.astro";
import BlogPostPreview from '../../components/BlogPostPreview.astro';

const seo = {
  title: "mdohr",
  description: "Welcome to my personal website! I'm mdohr07, an aspiring IT specialist and versatile artist. Here I document my progress in web development and programming, share creative projects in painting, drawing and 3D modeling, and write about my passions like drawing, journaling and road cycling. The aesthetic of the site is inspired by retro games and the old web, take a look around!"
  }
  
const updates = await Astro.glob("../content/updates/*md");

export async function getStaticPaths({ paginate }) {
  const posts = await Astro.glob('./*.md').then(posts =>
    posts
      .map(({ frontmatter, url }) => ({
        url: url,
        title: frontmatter.title,
        description: frontmatter.description,
        publishDate: frontmatter.publishDate,
        image: frontmatter.image,
      }))
      // Sortiere die Posts nach Datum (neueste zuerst)
      .sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate)) // Wichtig: Vergiss nicht das `return`-Statement f√ºr den Sortieralgorithmus!
  );
  return paginate(posts, { pageSize: 5 });
}
