---
import { Feed } from 'rss';

const feed = new Feed({
  title: 'mdohr\'s weblog',
  description: 'My newest blog entries',
  id: 'https://mdohr.space',
  link: 'https://mdohr.space/',
  language: 'en',
});

const posts = [
  // Hier solltest du deine BeitrÃ¤ge dynamisch abrufen,
  // z.B. von einer API oder aus Markdown-Dateien.
  { title: 'Beitrag 1', link: 'https://mdohr.space/blog/2023-11-11_artanddfrontend/', description: 'description', date: new Date() },
  { title: 'Beitrag 2', link: 'https://mdohr.space/blog/2024-02-12_Neocities-IndieWeb-Selfexpression', description: 'description', date: new Date() },
];

posts.forEach(post => {
  feed.addItem({
    title: post.title,
    id: post.link,
    link: post.link,
    description: post.description,
    date: post.date,
  });
});

const xml = feed.xml({ indent: true });
---

<astro-fragment>
  {xml}
</astro-fragment>

